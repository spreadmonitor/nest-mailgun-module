{
  "name": "@spreadmonitor/nest-mailer-module",
  "version": "1.0.0",
  "description": "Re-usable NestJS module for sending emails via Mailgun.",
  "author": "Attila Olah <attila.olah@spreadmonitor.com>",
  "license": "MIT",
  "homepage": "https://github.com/spreadmonitor/nest-mailgun-module#nest-mailgun-module",
  "bugs": "https://github.com/spreadmonitor/nest-mailgun-module/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:spreadmonitor/nest-mailgun-module.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc -p tsconfig.prod.json",
    "prettier:check": "prettier --check \"**/*.{ts,md}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,md}\"",
    "lint:check": "eslint --max-warnings 0 --ext .ts src/",
    "lint:fix": "eslint --max-warnings 0 --fix --ext .ts src/",
    "test": "jest",
    "test:ci": "jest --runInBand --coverage --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "npm run prettier:fix"
    ],
    "*.ts": [
      "npm run prettier:fix"
    ]
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0"
  },
  "dependencies": {
    "mailgun-js": "^0.22.0",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/jest": "^26.0.7",
    "@types/mailgun-js": "^0.22.9",
    "@types/node": "^14.0.0",
    "@types/pug": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "26.1.3",
    "typescript": "3.9.7"
  }
}
